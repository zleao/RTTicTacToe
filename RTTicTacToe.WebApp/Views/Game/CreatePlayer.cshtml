<h2>Create New Player</h2>

<form asp-action="CreatePlayer" method="post">
    <div class="form-horizontal">
        <h4>Game</h4>
        <hr />
        <input type="hidden" name="number" value="@ViewData["PlayerNumber"]">
        <div class="form-group">
            <label class="col-md-2 control-label">Name for Player @ViewData["PlayerNumber"]</label>
            <div class="col-md-10">
                <input name="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>